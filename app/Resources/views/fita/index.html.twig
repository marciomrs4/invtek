{% extends ':template:template.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/mrsinventario/css/dataTables.bootstrap.css') }}">

{% endblock %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Fita(s)
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_fita_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped table-datatable" data-order='[]'>
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Barcode</th>
                    <th>Ciclo</th>
                    <th>Jogo</th>
                    <th>Descrição</th>
                    <th>Mídia</th>
                    <th>Unidade</th>
                </tr>
                </thead>
                <tbody>
                {% for fitum in fitas %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_fita_show', { 'id': fitum.id }) }}" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('cadastro_fita_edit', { 'id': fitum.id }) }}" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('cadastro_fita_show', { 'id': fitum.id }) }}">{{ fitum.barCode }}</a></td>
                        <td>{{ fitum.ciclo }}</td>
                        <td>{{ fitum.jogo }}</td>
                        <td>{{ fitum.descricao }}</td>
                        <td>{{ fitum.midia }}</td>
                        <td>{{ fitum.unidade }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    {% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/mrsinventario/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/mrs-dataTable.js') }}"></script>


{% endblock %}