{% extends ':template:template.html.twig' %}


    {% block contentheader %}

        <section class="content-header">
            <h1>
                Troca de Fita
                <small>Editar</small>
            </h1>
        </section>

    {% endblock %}


    {% block firstrow %}

        {% for message in app.session.flashBag.get('notice') %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fa fa-info"></i> {{ message }}. <i class="fa fa-smile-o"></i>
                </div>
            </div>
        {% endfor %}


    {% endblock %}


    {% block panelheading %}

        <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_trocafita_index') }}" class="btn btn-primary btn-sm">
                <span class="fa fa-reply"></span>
                Voltar
            </a>

        </div>

        </div
        >{% endblock %}

    {% block panelbody %}

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

    {% endblock %}

    {% block panelfooter %}

        <button type="submit" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-floppy-disk"></span>
            Salvar
        </button>

        {{ form_end(edit_form) }}

<a href="{{ path('cadastro_trocafita_new') }}" id="link">
    {% endblock %}


    {% block javascripts %}

        {{ parent() }}

        <script src="{{ asset('bundles/mrsinventario/js/select2.js') }}"></script>

        <script>

            $(document).ready(function(){

                //$("#registro_backup_job").select2();

                //("#registro_backup_job").hidden();

            });

        </script>

        <script>
            var $troca_fita_unidade = $('#troca_fita_unidade');
            // When sport gets selected ...
            $troca_fita_unidade.change(function() {

                // alert('TESTE');

                //var $form = $(this).closest('form');
                var url = $("#link").attr('href');

                var data = {};

                data = $troca_fita_unidade.serialize();

                // Submit data via AJAX to the form's action path.
                $.ajax({
                    url : url,
                    type: 'POST',
                    data : data,
                    success: function(html) {

                        //$("#load").html(html);
                        // Replace current position field ...
                        $('#troca_fita_fita').replaceWith(
                                // ... with the returned one from the AJAX response.
                                $(html).find('#troca_fita_fita')
                        );

                        // Position field now displays the appropriate positions.
                    },
                    error: function(err){
                        $("#loader").html(err);
                    }
                });

            });

        </script>

    {% endblock %}
