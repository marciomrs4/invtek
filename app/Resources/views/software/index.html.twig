{% extends ':template:template.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/mrsinventario/css/dataTables.bootstrap.css') }}">

{% endblock %}

    {% block contentheader %}


        <section class="content-header">
            <h1>
                Software
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_software_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Versao</th>
                    <th>Serial</th>
                    <th>Tipo de Software</th>
                    <th>Fornecedor de Software</th>
                    <th>Nº de licença</th>
                    <th>Nº de Reservas</th>
                    <th>Em uso</th>
                    <th>Disponiveis</th>
                </tr>
                </thead>
                <tbody>
                {% for software in softwares %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_software_show', { 'id': software.id }) }}" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('cadastro_software_edit', { 'id': software.id }) }}" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td>{{ software.descricao }}</td>
                        <td>{{ software.versao }}</td>
                        <td>{{ software.serial }}</td>
                        <td>{{ software.tiposoftware }}</td>
                        <td>{{ software.fornecedor }}</td>
                        <td>{{ software.numerolicensa }}</td>
                        <td>{{ software.numeroReserva }}</td>
                        <td>{{ software.quantidadeEquipamento }}</td>
                        <td>{{ software.disponiveis }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/mrsinventario/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/mrs-dataTable.js') }}"></script>


{% endblock %}