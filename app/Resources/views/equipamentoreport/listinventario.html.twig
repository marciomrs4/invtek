{% extends ':template:template.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/mrsinventario/css/dataTables.bootstrap.css') }}">

{% endblock %}

    {% block contentheader %}

        <section class="content-header">
            <h1>
                Equipamento
                <small>Lista de Inventário | Encontrado(s) {{ equipamentos|length }}</small>
            </h1>
        </section>

    {% endblock %}

    {% block content %}

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="box box-primary">
                    <!-- /.box-header -->
                    <div class="box-body">

                        {{ form_start(form, { 'attr':{ 'novalidate':'novalidate' }}) }}

                        <div class="row">


                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">

                                <div class="form-group">
                                    {{ form_row(form.centroMovimentacao) }}
                                </div>

                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">

                                <div class="form-group">
                                    {{ form_row(form.tipoequipamento) }}
                                </div>

                            </div>

                            <div class="col-lg-3 col-md-2 col-sm-6 col-xs-6">

                                <div class="form-group">
                                    {{ form_row(form.status) }}
                                </div>

                            </div>


                            <div class="col-lg-3 col-md-2 col-sm-4 col-xs-4">

                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">

                                            <button class="btn btn-default btn-sm">
                                                <span class="glyphicon glyphicon-search"></span>
                                                Procurar
                                            </button>

                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">

                                            <button class="btn btn-default btn-sm" id="export-excel"
                                                    data-toggle="tooltip" data-placement="top" data-delay="5000"
                                                    title="Para baixar um novo excel faça uma nova busca">
                                                <span class="glyphicon glyphicon-export"></span>
                                                Exportar
                                            </button>

                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                        {{ form_end(form) }}

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>


        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="box box-primary">

                    <div class="box-body">

                        <div class="table-responsive">

                            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">

                                <thead>
                                <tr>
                                    <th>Ações</th>
                                    <th>Centro de Movimentação</th>
                                    <th>Tipo de Equipamento</th>
                                    <th>Patrimônio</th>
                                    <th>Número de Série</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for equipamento in equipamentos %}

                                    <tr>
                                        <td>
                                            <a href="{{ path('cadastro_equipamento_show', {'id': equipamento.id}) }}"
                                               class="btn btn-primary btn-sm"
                                               data-toggle="tooltip" data-placement="top" title="Ir para o Cadastro do item">
                                                <span class="glyphicon glyphicon-eye-open"></span>
                                            </a>
                                        </td>
                                        <td>{{ equipamento.centroMovimentacao }}</td>
                                        <td>{{ equipamento.tipoEquipamento }}</td>
                                        <td>{{ equipamento.patrimonio }}</td>
                                        <td>{{ equipamento.numeroSerie }}</td>
                                        <td>{{ equipamento.status }}</td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <a href="{{ path('report_export_list_equipamento') }}" id="link">

    {% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('bundles/mrsinventario/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/mrs-dataTable.js') }}"></script>

    <script src="{{ asset('bundles/mrsinventario/js/jquery-download.js') }}"></script>
    <script src="{{ asset('bundles/mrsinventario/js/select2.js') }}"></script>


    <script>

        $(document).ready(function(){

                $("#report_equipamentos_centroMovimentacao").select2();
                $("#report_equipamentos_tipoequipamento").select2();

            var url = $('#link').attr('href');

            $('#export-excel').click(function(){

                $('#export-excel').attr('disabled','disabled');

                $.fileDownload(url,{
                    httpMethod: "GET",
                    data:{
                        status : $("#report_equipamentos_status").val(),
                        centroMovimentacao : $("#report_equipamentos_centroMovimentacao").val(),
                        tipoEquipamento : $('#report_equipamentos_tipoequipamento').val()
                    }
                });


            });

        });

    </script>

{% endblock %}