{% extends ':template:template.html.twig' %}



    {% block contentheader %}

        <section class="content-header">
            <h1>
                Usuario
                <small>Mostrar</small>
            </h1>
        </section>

    {% endblock %}

    {% block firstrow %}

        {% for message in app.session.flashBag.get('notice') %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fa fa-info"></i> {{ message }}. <i class="fa fa-smile-o"></i>
                </div>
            </div>
        {% endfor %}


    {% endblock %}


    {% block panelheading %}

        <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_usuario_index') }}" class="btn btn-primary btn-sm">
                <span class="fa fa-reply"></span>
                Voltar
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_usuario_edit', { 'id': usuario.id }) }}" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-edit"></span>
                Editar
            </a>

        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger btn-sm remover-form">
                <span class="glyphicon glyphicon-trash"></span>
                Deletar
            </button>
            {{ form_end(delete_form) }}

        </div>
        </div>{% endblock %}



    {% block panelbody %}

        <div class="table table-responsive">
            <table class="table table-bordered table-condensed">
                <tbody>
                <tr>
                    <th>Nome Completo</th>
                    <td>{{ usuario.nomecompleto }}</td>
                </tr>
                <tr>
                    <th>Centro de Movimentação</th>
                    <td>{{ usuario.departamento.nome }}</td>
                </tr>
                <tr>
                    <th>Nome</th>
                    <td>{{ usuario.nome }}</td>
                </tr>

                <tr>
                    <th>
                        Número Identificação
                    </th>
                    <td>{{ usuario.numeroIdentificacao }}</td>

                </tr>
                <tr>
                    <th>
                        Acesso
                    </th>
                    <td>
                        {% if usuario.userId is not null%}
                            {{ usuario.userId.email }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        Status
                    </th>
                    <td>{% if usuario.status %}Ativo{% else %}Inativo{% endif %}</td>

                </tr>
                <tr>
                    <th>Observação</th>
                    <td>{{ usuario.observacao }}</td>
                </tr>


                </tbody>
            </table>
        </div>


    {% endblock %}
