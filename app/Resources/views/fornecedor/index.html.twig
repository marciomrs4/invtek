{% extends ':template:template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Fornecedor
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_fornecedor_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>

        {% if importacao %}
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal"
                data-target=".bs-example-modal-sm">
            <span class="glyphicon glyphicon-upload"></span>
            Importar
        </button>
        {% endif %}

    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                </tr>
                </thead>
                <tbody>
                {% for fornecedor in fornecedors %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_fornecedor_show', { 'id': fornecedor.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                                Mostrar
                            </a>
                            <a href="{{ path('cadastro_fornecedor_edit', { 'id': fornecedor.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        </td>
                        <td>{{ fornecedor.nome }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>



        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">

            <div class="col-md-3"></div>

            <div class="col-md-6">

                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">Importar Arquivo</h4>
                    </div>
                    <div class="modal-body">

                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="row">

                                <div class="col-md-4">
                                    <input type="file" name="file_csv" required>
                                </div>

                            </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary btn-sm pull-left">
                            <span class="glyphicon glyphicon-upload"></span>
                            Importar
                        </button>
                        </form>
                        <button type="button" class="btn btn-default btn-sm pull-right" data-dismiss="modal">Fechar</button>
                    </div>

                    <div class="panel panel-default">

                        <div class="panel-heading">
                            Enviar somente as colunas, sem o cabeçalho, cada coluna separada por virgula (",")
                            Como um arquivo CSV.
                            Colunas necessárias: Exemplo abaixo.
                        </div>

                        <div class="panel-body">

                            <table class="table table-bordered table-condensed">
                                <thead>
                                <tr>
                                    <th>Nome</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>Nome</td>
                                    <td></td>
                                </tr>
                                </tbody>

                            </table>

                        </div>

                    </div>


                </div>

            </div>

            <div class="col-md-3">
            </div>

        </div>



    {% endblock %}
