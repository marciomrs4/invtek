    {% extends ':template:template.html.twig' %}



    {% block contentheader %}

    <section class="content-header">
        <h1>
            Troca de Fita
            <small>Mostrar</small>
        </h1>
    </section>

    {% endblock %}

    {% block firstrow %}

    {% for message in app.session.flashBag.get('notice') %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <i class="fa fa-info"></i> {{ message }}. <i class="fa fa-smile-o"></i>
        </div>
    </div>
    {% endfor %}


    {% endblock %}


    {% block panelheading %}

        <div class="row">

    <div class="col-md-2 col-sm-3 col-xs-3">

        <a href="{{ path('cadastro_trocafita_index') }}" class="btn btn-primary btn-sm">
            <span class="fa fa-reply"></span>
            Voltar
        </a>

    </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_trocafita_edit', { 'id': trocaFitum.id }) }}" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-edit"></span>
                Editar
            </a>

        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('view_log_trocafita', {'trocafita': trocaFitum.id}) }}" target="_blank"  class="btn btn-success btn-sm">
                <span class="glyphicon glyphicon-list"></span>
                Log
            </a>

        </div>
</div>{% endblock %}



    {% block panelbody %}

    <div class="table table-responsive">
        <table class="table table-bordered table-condensed">
            <tbody>
                <tr>
                    <th>Datacriacao</th>
                        <td>{% if trocaFitum.dataCriacao %}{{ trocaFitum.dataCriacao|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                     <td>{{ trocaFitum.user }}</td>
                </tr>
                <tr>
                    <th>Bar Code</th>
                    <td>{{ trocaFitum.fita.barCode }}</td>
                </tr>
                <tr>
                    <th>Ciclo</th>
                    <td>{{ trocaFitum.fita.ciclo }}</td>
                </tr>
                <tr>
                    <th>Jogo</th>
                    <td>{{ trocaFitum.fita.jogo }}</td>
                </tr>
                <tr>
                    <th>Descrição</th>
                    <td>{{ trocaFitum.fita.descricao }}</td>
                </tr>
                <tr>
                    <th>Unidade</th>
                    <td>{{ trocaFitum.fita.unidade }}</td>
                </tr>
            </tbody>
        </table>
    </div>


    {% endblock %}

    {% block panelfooter %}
        RG.TI.02.003 - REGISTRO DE TROCA DE FITA - Rev.03 - 13.05.17
    {% endblock %}
